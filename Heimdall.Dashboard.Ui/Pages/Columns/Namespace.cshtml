<template id="ns-column">
  <div :class="classes">
    <tooltip :placement="placement" padding="pl-4 py-2">
      <template v-slot:cell>
        <div @@click="nsClick" class="truncate underline text-blue-500">{{ namespace }}</div>
      </template>
      
      <template v-slot:tooltip>
        <div class="text-sm whitespace-no-wrap leading-none break-words w-fit">{{ 'Set global namespace filter to: ' + namespace }}</div>
      </template>
    </tooltip>
  </div>
</template>

<script type="module">
let setup = (props, ctx) => {
  let nsClick = (e) => {
    eventBus.emit(props.namespace);
    e.preventDefault();
    e.stopPropagation();
    e.stopImmediatePropagation();
    return false
  }
  
  return { nsClick }
}

components["ns-column"] = { template: "#ns-column", setup,
  props: {
    classes: String,
    namespace: String,
    placement: {
      type: String,
      default: 'bottom'
    }
  },
};
</script>
