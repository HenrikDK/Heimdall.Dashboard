<!DOCTYPE html>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="/favicon.svg">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tabulator-tables@5.3.4/dist/css/tabulator_semanticui.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vue-select@4.0.0-beta.5/dist/vue-select.css">
    <link rel="stylesheet" href="/css/search-styles.css" asp-append-version="true">

    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21"></script>    
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.3"></script>
    <script src="https://cdn.jsdelivr.net/npm/tabulator-tables@5.3.4"></script>
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.3.3"></script>
    <script src="https://cdn.tailwindcss.com"></script> 
    <!-- <script src="https://cdn.jsdelivr.net/npm/tailwindcss@3.1.8"></script> -->

    <script>
        tailwind.config = {
          theme: {
            extend: {
              colors: {
                k8s: '#326ce5',
              }
            }
          }
        }
      </script>
    
    <script src="https://cdn.jsdelivr.net/npm/vue@3.2.37"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-router@4.1.5"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-echarts@6.1.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-select@4.0.0-beta.5"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-search-input@1.1.10"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/api.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

<div id="app">
    @RenderBody()
</div>

@RenderSection("VueComponents", required: false)

@RenderSection("Scripts", required: false)

<script type="module">
    const router = VueRouter.createRouter({
      history: VueRouter.createWebHashHistory(),
      routes
    })

    const app = Vue.createApp({
    methods: {},
    mixins: mixinArray,
    data() {
        return {
            view: "cluster",
            namespace: "",
            search: "",
        }
    }
    })
    .component('v-chart', VueECharts)
    .component('v-select', window['vue-select'])
    .component('v-search', VueSearchInput);
    Object.entries(components).forEach(([k,v]) =>{
        app.component(k, v)
    });
    app.use(router)
    app.mount('#app');
</script>
</body>
</html>